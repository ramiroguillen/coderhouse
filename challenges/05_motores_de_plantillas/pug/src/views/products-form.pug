div(class="w-50 d-flex flex-column align-items-center")
    form(action="/products" method="POST" class="card d-flex flex-column align-items-center w-75")
        div(class="my-3")
            label(for="name" class="form-label")="Name:"
            input(type="text" name="name" class="form-control")
        div(class="mb-3")
            label(for="price" class="form-label")="Price:"
            input(type="number" name="price" class="form-control")
        div(class="mb-3")
            label(for="thumbnail" class="form-label")="Thumbnail:"
            input(type="text" name="thumbnail" class="form-control")
        div(class="mb-3")
            button(type="submit" class="btn btn-primary")="Submit"
    a(href="/products" class="mt-3")
        button(class="btn btn-primary")="Go to Products"
